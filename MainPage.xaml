<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCProj.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <StackLayout Padding="20">
                <Label Text="Login" FontSize="24" HorizontalOptions="Center" Margin="0,50,0,20" />

                <Entry x:Name="usernameEntry" Placeholder="Username" />
                <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

                <Button Text="Login" Clicked="LoginButton_Clicked" HorizontalOptions="Center" Margin="0,20,0,0" />
            </StackLayout>
            <!--<StackLayout>
                <Button Text="Register Tag" Clicked="RegisterTagButton_Clicked" AutomationId="RegisterTagButton" />
                <Button Text="Log Tag" Clicked="LogTagButton_Clicked" AutomationId="LogTagButton" />
            </StackLayout>-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
