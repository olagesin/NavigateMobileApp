<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCProj.LogArrivals"
             Title="LogArrivals">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <RadioButton x:Name="ArrivalButton" Content="Arrival" GroupName="OptionsGroup"  Grid.Row="1"/>
        <RadioButton x:Name="DepartureButton" Content="Departure" GroupName="OptionsGroup" Grid.Row="2" />

        <Label x:Name="lblStatus" Text="NFC Status on device:"  FontAttributes="Bold" Margin="0,10,0,0" HorizontalOptions="Center" Grid.Row="3"/>

        <Label x:Name="nfcReadStatus" Text="Idle:" FontAttributes="Bold" Margin="0,10,0,0" HorizontalOptions="Center" Grid.Row="5" />

        <Button Text="Close Page" Clicked="ClosePage_Clicked" Grid.Row="6" />
    </Grid>
</ContentPage>