<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCProj.HomePage"
             Title="HomePage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <StackLayout>
                <Button Text="Register Tag" Clicked="RegisterTagButton_Clicked" AutomationId="RegisterTagButton" />
                <Button Text="Log Tag" Clicked="LogTagButton_Clicked" AutomationId="LogTagButton" />
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>